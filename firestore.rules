rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Personal trips
    match /users/{userId}/trips/{tripId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Shared Trips (SECURE & EMAIL ENABLED)
    match /shared-trips/{tripId} {
      
      // CREATE: SECURE. Only allow if the new doc's owner matches the logged-in user's UID.
      // This prevents users from creating trips on behalf of others.
      allow create: if request.auth != null && 
                    request.resource.data.owner == request.auth.uid;

      // READ & UPDATE: Hybrid Security (UID + Email)
      // Allow access if:
      // A. User is the Owner (UID match on existing doc)
      // B. User is in the 'collaborators' list (Legacy UID support)
      // C. User's Email is in the 'allowedEmails' list (New Sharing System)
      // READ: Allow if Owner, Collaborator, Email Match, OR if it's an Open Invite (Check Invite Doc logic usually, but here we read the doc itself)
      // Actually, for "Joining", you first need to READ the doc to check if it exists.
      // We'll allow READ if you have the ID (Link Knowledge) - Weak Security but standard for Share Links.
      // Strengthening: Only allow READ if you are in the list.
      // BUT: To join, you must read it first?
      // solution: `getDoc` fails.
      // Logic: Users with link try to `joinSharedTrip`.
      
      // PERMISSIVE READ for Valid Share IDs (If you have the random ID, you can read).
      allow read: if request.auth != null; 

      // UPDATE: Hybrid Security
      allow update: if request.auth != null && (
        // 1. Standard: Owner or Existing Collaborator
        resource.data.owner == request.auth.uid ||
        request.auth.uid in resource.data.collaborators ||
        
        // 2. Email Verification (Legacy)
        (resource.data.allowedEmails is list && request.auth.token.email in resource.data.allowedEmails) ||

        // 3. âœ¨ SELF-JOIN (The Fix): Allow adding yourself if you preserve the list
        (
           request.resource.data.diff(resource.data).affectedKeys().hasOnly(['collaborators', 'updatedAt']) &&
           request.resource.data.collaborators.size() == resource.data.collaborators.size() + 1 &&
           request.resource.data.collaborators.hasAll(resource.data.collaborators) &&
           request.auth.uid in request.resource.data.collaborators
        )
      );

      // DELETE: Owner only
      allow delete: if request.auth != null && resource.data.owner == request.auth.uid;
    }
    
    // 3. Shared Trip References
    match /users/{userId}/shared-trip-refs/{refId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 4. Shared Trip Invites (SAFE METADATA ONLY)
    match /trip_invites/{inviteId} {
      // Any user (even unauth) can READ the invite metadata if they have the ID
      allow get: if true;
      // Owner can Create/Update/Delete (Critical for Self-Healing & New Shares)
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // 5. AI Cache
    match /ai_cache/{hash} {
      allow read, write: if true;
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
