rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Personal trips
    match /users/{userId}/trips/{tripId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 2. Shared Trips Collection (Email-Based System)
    match /shared-trips/{tripId} {
      // 1. CREATE: Allow any logged-in user to create (Fixes 403 error)
      allow create: if request.auth != null;

      // 2. READ & WRITE: Owner UID match OR Email match
      allow read, update: if request.auth != null && (
        resource.data.owner == request.auth.uid ||
        (resource.data.allowedEmails is list && request.auth.token.email in resource.data.allowedEmails)
      );

      // 3. DELETE: Owner only
      allow delete: if request.auth != null && resource.data.owner == request.auth.uid;
    }
    
    // 3. Shared Trip References
    match /users/{userId}/shared-trip-refs/{refId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 4. AI Cache
    match /ai_cache/{hash} {
      allow read, write: if true;
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
