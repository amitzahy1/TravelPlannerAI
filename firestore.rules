rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Personal trips
    // Only the user {userId} can read/write their own trips
    match /users/{userId}/trips/{tripId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 2. Shared Trips Collection
    match /shared-trips/{tripId} {
      // READ: Allow if user is in 'collaborators' array of the EXISTING document
      allow read: if request.auth != null && 
                  request.auth.uid in resource.data.collaborators;
      
      // CREATE: Allow if user includes themselves in 'collaborators' array of the NEW document
      allow create: if request.auth != null && 
                    request.auth.uid in request.resource.data.collaborators;
      
      // UPDATE: Allow if user is in 'collaborators' array of the EXISTING document
      allow update: if request.auth != null && 
                    request.auth.uid in resource.data.collaborators;
      
      // DELETE: Only the OWNER can delete the shared trip
      allow delete: if request.auth != null && 
                    request.auth.uid == resource.data.owner;
    }
    
    // 3. Shared Trip References (User Profile)
    // Only the specific user can manage their list of shared trips
    match /users/{userId}/shared-trip-refs/{refId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 4. Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
