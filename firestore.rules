rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Personal trips
    match /users/{userId}/trips/{tripId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 2. Shared Trips (SECURE & EMAIL ENABLED)
    match /shared-trips/{tripId} {
      
      // CREATE: SECURE. Only allow if the new doc's owner matches the logged-in user's UID.
      // This prevents users from creating trips on behalf of others.
      allow create: if request.auth != null && 
                    request.resource.data.owner == request.auth.uid;

      // READ & UPDATE: Hybrid Security (UID + Email)
      // Allow access if:
      // A. User is the Owner (UID match on existing doc)
      // B. User is in the 'collaborators' list (Legacy UID support)
      // C. User's Email is in the 'allowedEmails' list (New Sharing System)
      allow read, update: if request.auth != null && (
        resource.data.owner == request.auth.uid ||
        (resource.data.collaborators is list && request.auth.uid in resource.data.collaborators) ||
        (resource.data.allowedEmails is list && request.auth.token.email in resource.data.allowedEmails)
      );

      // DELETE: Owner only
      allow delete: if request.auth != null && resource.data.owner == request.auth.uid;
    }
    
    // 3. Shared Trip References
    match /users/{userId}/shared-trip-refs/{refId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 4. Shared Trip Invites (SAFE METADATA ONLY)
    match /trip_invites/{inviteId} {
      // Any user (even unauth) can READ the invite metadata if they have the ID
      allow get: if true;
      // Owner can Create/Update/Delete (Critical for Self-Healing & New Shares)
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // 5. AI Cache
    match /ai_cache/{hash} {
      allow read, write: if true;
    }

    // Default Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
